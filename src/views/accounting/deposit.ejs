<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/auth.css">
<link rel="stylesheet" href="/css/css/all.min.css">
</head>

<body>
    <%- include('../includes/user-nav.ejs') %>
    <div class=" form grid">
        <article class="card">
            <form class="login-form" action="<%= postPath%>" method="POST" novalidate>
                <div class="form-control">
                    <label for="payment"> Payment Options </label>
                    <select name="paymentMethod">
                        <option>Choose an option</option>
                        <% options.forEach(function(entry, i, entries){ %>
                            <option value="<%= entry %>"><%= entry %></option>
                        <% })%>
                        </select>
                </div>
                <div class="form-control">
                    <label for="amount"> Amount</label>
                    <input type="number" name="amount" placeholder=" amount" value="<%= previousData.amount%>" />
                </div>
                <%- include('../includes/csurf.ejs') %>
                <input class="btn" type="submit" value="Deposit the Amount">
            </form>
        </article>
    </div>
    </main>
    <%- include('../includes/end.ejs') %>